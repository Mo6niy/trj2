pipeline {
    agent any

    parameters {
        string(name: 'name', defaultValue: 'Anatoli', description: 'Your first name')
        string(name: 'scope', defaultValue: '3', description: 'scope of cluster')
        string(name: 'region', defaultValue: 'west US', description: 'location')

    }

    stages 
    {
        stage('Start') {
            steps {
                echo "Hello ${params.name}"
                echo "We using location is ${params.region} and scope of clucter is number ${params.scope}"
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            }
        }
        
        stage('End') {
            steps {
                sh '''
                echo "Build is ok"
                 '''
                echo "this is additional test parrameter  ${params.addpar}"
                echo "Bye ${params.name}"
            }
        }
    }
}

